<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <com.hnhy.ylfz.mvp.ui.widget.NiceImageView
            android:id="@+id/iv_portrait"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"
            android:src="@drawable/icon_portrait"
            android:layout_marginLeft="@dimen/dimen_40dp"
            android:layout_gravity="center_vertical"
            app:is_circle="true"
            />
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_20dp"
            >
            <TextView
                android:id="@+id/tv_name"
                style="@style/StyleCommonText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_certified"
                android:textSize="18sp"
                android:text="@string/str_nul"
                />
            <ImageView
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:src="@drawable/icon_vip"
                android:layout_marginStart="@dimen/dimen_5dp"
                app:layout_constraintStart_toEndOf="@id/tv_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_certified"/>
            <TextView
                android:id="@+id/tv_certified"
                style="@style/StyleCommonText.White"
                android:drawableLeft="@drawable/icon_cross"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingLeft="@dimen/dimen_6dp"
                android:paddingRight="@dimen/dimen_6dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_oval_red"
                android:backgroundTint="@color/colorGreen"
                android:text="@string/str_certified"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_15dp"
        android:background="@color/colorBg_f8"/>
    <RelativeLayout
        android:id="@+id/rl_consult"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp">
        <ImageView
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:src="@drawable/icon_consult"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_centerVertical="true"/>
        <TextView
            style="@style/StyleCommonText"
            android:text="@string/str_consult"
            android:layout_marginLeft="@dimen/dimen_35dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="@dimen/dimen_15dp"
            android:layout_height="@dimen/dimen_15dp"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        style="@style/StyleDivider"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@color/colorBg_f8"/>
    <RelativeLayout
        android:id="@+id/rl_modify_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp">

        <ImageView
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_pwd" />
        <TextView
            style="@style/StyleCommonText"
            android:text="@string/str_title_modify_pwd"
            android:layout_marginLeft="@dimen/dimen_35dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="@dimen/dimen_15dp"
            android:layout_height="@dimen/dimen_15dp"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        style="@style/StyleDivider"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@color/colorBg_f8"/>
    <RelativeLayout
        android:id="@+id/rl_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp">
        <ImageView
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:src="@drawable/icon_feedback"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_centerVertical="true"/>
        <TextView
            style="@style/StyleCommonText"
            android:text="@string/str_my_feedback"
            android:layout_marginLeft="@dimen/dimen_35dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="@dimen/dimen_15dp"
            android:layout_height="@dimen/dimen_15dp"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        style="@style/StyleDivider"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@color/colorBg_f8"/>
    <RelativeLayout
        android:id="@+id/rl_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp">
        <ImageView
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:src="@drawable/icon_about"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_centerVertical="true"/>
        <TextView
            style="@style/StyleCommonText"
            android:text="@string/str_about"
            android:layout_marginLeft="@dimen/dimen_35dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="@dimen/dimen_15dp"
            android:layout_height="@dimen/dimen_15dp"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>