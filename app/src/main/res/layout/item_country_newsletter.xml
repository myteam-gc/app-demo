<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_15dp"
    android:layout_marginTop="@dimen/dimen_15dp"
    android:layout_marginRight="@dimen/dimen_15dp"
    android:background="@drawable/selector_oval_white"
    android:padding="@dimen/dimen_20dp">

    <com.hnhy.ylfz.mvp.ui.widget.CornerImageView
        android:id="@+id/iv_picture"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        app:radius="@dimen/dimen_5dp" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/StyleCommonText"
        android:layout_width="match_parent"
        android:layout_alignTop="@id/iv_picture"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_toLeftOf="@+id/iv_picture"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="《关于进一步加强医疗机构、医师、护士电子化注册信息核查和管理工作的通知》"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/StyleCommonText.GrayDark"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_toLeftOf="@+id/iv_picture"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="《关于进一步加强医疗机构、医师、护士电子化注册信息核查和管理工作的通知》"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/StyleCommonText.GrayDark"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="2019-11-13"
        android:textSize="12sp" />

    <View
        style="@style/StyleDivider.Light"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:visibility="gone" />
</RelativeLayout>