<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.hnhy.ylfz.mvp.ui.widget.VideoPlayView2
        android:id="@+id/video_play_view2"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_10dp"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/tv_title"
        style="@style/StyleCommonText"
        android:layout_width="match_parent"
        android:layout_below="@+id/video_play_view2"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_margin="@dimen/dimen_10dp"
        android:text="《关于进一步加强医疗机构、医师、护士电子化注册信息核查和管理工作的通知》"
        android:textSize="20sp" />

    <View
        style="@style/StyleDivider.Light"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"/>
</RelativeLayout>