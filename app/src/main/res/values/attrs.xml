<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="reference|string"/>
    <attr name="titleTextColor" format="color"/>
    <declare-styleable name="ViewNoData">
        <attr name="hintIcon" format="reference" />
        <attr name="hint1" format="reference|string" />
        <attr name="hint2" format="reference|string" />
        <attr name="mulLineHint" format="boolean" />
        <attr name="topIconMargin" format="dimension" />
        <attr name="iconSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ToolBar">
        <attr name="styleType">
            <enum name="dark" value="0"/>
            <enum name="light" value="1"/>
        </attr>
        <attr name="leftType">
            <enum name="none" value="0"/>
            <enum name="finish" value="1"/>
            <enum name="function" value="2"/>
        </attr>
        <attr name="leftIcon" format="reference"/>
        <attr name="title" />
        <attr name="titleTextColor"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="rightType">
            <enum name="none" value = "0"/>
            <enum name="icon" value = "1"/>
            <enum name="string" value = "2"/>
        </attr>
        <attr name="rightIcon" format="reference"/>
        <attr name="rightString" format="reference|string"/>
        <attr name="isTransBg" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NiceImageView">
        <attr name="is_circle" format="boolean" />
        <attr name="is_cover_src" format="boolean" />
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_top_left_radius" format="dimension" />
        <attr name="corner_top_right_radius" format="dimension" />
        <attr name="corner_bottom_left_radius" format="dimension" />
        <attr name="corner_bottom_right_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="inner_border_width" format="dimension" />
        <attr name="inner_border_color" format="color" />
        <attr name="mask_color" format="color" />
    </declare-styleable>
</resources>